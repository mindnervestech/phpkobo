<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/messageLayout"
        android:layout_height="100dp"
        android:layout_below="@+id/clusterSpinner"
        android:layout_width="match_parent"
        android:visibility="invisible">
        <TextView
            android:id="@+id/message"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/successText"
            android:text="asasajcsc"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/successText"
            android:layout_centerHorizontal="true"
            android:text="asasa"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Spinner
        android:id="@+id/clusterSpinner"
        android:layout_width="match_parent"
        android:spinnerMode="dropdown"
        android:layout_marginTop="20dp"
        android:dropDownWidth="match_parent"
        android:layout_height="wrap_content"></Spinner>

    
    <Button android:id="@+id/btnShowLocation" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/raise_alarm"
        android:textStyle="bold"
        android:textSize="25dp"
        android:padding="20dp"
        android:layout_below="@+id/messageLayout"
        android:layout_marginBottom="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@+id/btnShowLocation"
        android:shrinkColumns="*"
        android:stretchColumns="*" >


    </TableLayout>
</RelativeLayout>